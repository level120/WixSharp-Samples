{
  "Version": "0.0.1-preview",
  "GUID": "38FAECC0-D6EF-496E-B551-A21DD7DCDCC3",
  "Manufacturer": "My Company",
  "InstallerName": "WixSharp",
  "LicenseFilePath": "../License/ja-jp.rtf",
  "UseService": true,
  "UseRunningAsAdministrator": true,
  "WindowsService": {
    "ServiceName": "WixSharp Service",
    "ServiceFile": "Some.exe",
    "IsInstalling": true,
    "ServiceArguments": null
  },
  "SupportLanguages": [
    {
      "Id": "ko-KR",
      "WxlFilePath": "../Localizations/WixUI_ko-KR.wxl"
    },
    {
      "Id": "en-US",
      "WxlFilePath": "../Localizations/WixUI_en-us.wxl"
    },
    {
      "Id": "ja-JP",
      "WxlFilePath": "../Localizations/WixUI_ja-jp.wxl"
    }
  ],
  "MappingItems": [
    {
      "Destination": "%ProgramFiles%/WixSharp-Sample",
      "MappingItems": [
        {
          "Destination": "Localizations",
          "Source": "../Localizations/*.*"
        },
        {
          "Destination": "License",
          "Source": "../License/*.*"
        },
        {
          "Destination": "Common",
          "Source": "../*.*",
          "ExcludeType": ".gitignore"
        }
      ]
    }
  ],
  "Shortcuts": [
    {
      "FileName": "specification.json",
      "Items": [
        {
          "ShortcutName": "spec.json",
          "ShortcutPath": "%Desktop%"
        }
      ]
    }
  ]
}
